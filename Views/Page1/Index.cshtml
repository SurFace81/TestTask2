<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Page1</title>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.3/themes/base/jquery-ui.css">
    <style>
        label,
        input,
        select {
            display: block;
        }

        input.text,
        select {
            margin-bottom: 12px;
            width: 95%;
            padding: .4em;
        }

        fieldset {
            padding: 0;
            border: 0;
            margin-top: 25px;
        }

        h1 {
            font-size: 1.2em;
            margin: .6em 0;
        }

        .ui-dialog .ui-state-error {
            padding: .3em;
        }

        .validateTips {
            border: 1px solid transparent;
            padding: 0.3em;
        }

        .error {
            color: red;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>
    <script>
        $(function () {
            var dialog, form, dishDialog, dishForm,
                name = $("#name"),
                email = $("#email"),
                dish = $("#dish"),
                tips = $(".validateTips"),
                dishName = $("#dish-name"),
                dishList = {};

            function updateTips(t) {
                tips.text(t).addClass("ui-state-highlight");
                setTimeout(function () {
                    tips.removeClass("ui-state-highlight", 1500);
                }, 500);
            }

            function addDish() {
                var valid = true;
                dishName.removeClass("ui-state-error");
                tips.removeClass("error");

                var newDish = { Name: dishName.val() };

                $.ajax({
                    url: '/api/food/add',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(newDish),
                    success: function (data) {
                        $("#dish").append(`<option value="${data.id}">${data.name}</option>`);
                        dishDialog.dialog("close");
                    },
                    error: function (jqXHR) {
                        dishName.addClass("ui-state-error");
                        tips.text(jqXHR.responseText).addClass("error");
                    }
                });

                return valid;
            }

            dishDialog = $("#dish-dialog-form").dialog({
                autoOpen: false,
                height: 300,
                width: 350,
                modal: true,
                buttons: {
                    "Add Dish": addDish,
                    Cancel: function () {
                        dishDialog.dialog("close");
                    }
                },
                close: function () {
                    dishForm[0].reset();
                    dishName.removeClass("ui-state-error");
                    tips.removeClass("error").text("");
                }
            });

            dishForm = dishDialog.find("form").on("submit", function (event) {
                event.preventDefault();
                addDish();
            });

            $("#add-dish").button().on("click", function () {
                dishDialog.dialog("open");
            });

            $("#tell-food").button().on("click", function () {
                if (name.val() && email.val() && dish.val()) {
                    var formData = {
                        name: name.val(),
                        email: email.val(),
                        dishId: dish.val()
                    };

                    $.ajax({
                        url: '/api/page1/tellfood',
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(formData),
                        success: function (data) {
                            if (data.redirectTo) {
                                window.location.href = data.redirectTo;
                            }
                        },
                        error: function (jqXHR) {
                            updateTips(jqXHR.responseText);
                        }
                    });
                } else {
                    updateTips("All form fields are required.");
                }
            });
        });
    </script>
</head>
<body>
    <div id="food-form">
        <p class="validateTips">All form fields are required.</p>
        <form>
            <fieldset>
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="text ui-widget-content ui-corner-all">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" class="text ui-widget-content ui-corner-all">
                <label for="dish">Dish</label>
                <select name="dish" id="dish" class="ui-widget-content ui-corner-all">
                    <option value="">Select a dish</option>
                    @foreach (var food in ViewBag.FoodList)
                    {
                            <option value="@food.Id">@food.Name</option>
                    }
                </select>
                <button type="button" id="add-dish">Добавить новое блюдо</button>
                <button type="button" id="tell-food">Рассказать о том, что я ем</button>
            </fieldset>
        </form>
    </div>

    <div id="dish-dialog-form" title="Add new dish">
        <p class="validateTips">All form fields are required.</p>
        <form>
            <fieldset>
                <label for="dish-name">Dish Name</label>
                <input type="text" name="dish-name" id="dish-name" class="text ui-widget-content ui-corner-all">
            </fieldset>
        </form>
    </div>
</body>
</html>
